#!/bin/sh

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# Run install script in /tmp and then perform cleanup.
#======================================================================================================================

INSTALL=/tmp/install
[[ ! -f ${INSTALL} ]] && bcg-error "Script not found." "bcg-install"

chmod +x ${INSTALL} && ${INSTALL}

bcg-clear
bcg-done
