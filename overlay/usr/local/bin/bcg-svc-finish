#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Check argument.
#   1   Service name
#======================================================================================================================

[[ -z "${1-}" ]] && bcg-error "You must provide the name of the service." "bcg-svc-finish"
NAME=${1}


#======================================================================================================================
# Echo service finish debug message.
#======================================================================================================================

bcg-debug "Service closing down." "${NAME}/finish"
