#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Echo debug message in grey if DEBUG flag is set - otherwise do nothing.
#
# Arguments
#   1   Name of script or executable
#   2   Text to echo
#======================================================================================================================

if [ "${DEBUG-}" = "1" ] ; then
    GREY="\e[1;30m"
    OUTPUT=$(bcg-e "bcg" "${GREY}" "${1}: ${2}") # capture output so the whole thing can be output in grey
    echo -e "${GREY}${OUTPUT}"
fi
