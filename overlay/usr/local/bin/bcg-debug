#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Echo debug message in grey if DEBUG flag is set - otherwise do nothing.
#
# Arguments
#   1   Text to echo
#======================================================================================================================

if [ "${DEBUG-}" = "1" ] ; then
    GREY="\e[1;30m"
    OUTPUT=$(bcg-e "bcg" "${GREY}" "${1-}") # capture output so the whole thing can be output in grey
    echo -e "${GREY}${OUTPUT}"
fi
