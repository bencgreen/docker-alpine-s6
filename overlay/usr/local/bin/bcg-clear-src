#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Check environment variable.
#======================================================================================================================

[[ -z "${SRC-}" ]] && bcg-error "SRC environment variable is not set." "bcg-clear-src"


#======================================================================================================================
# Clear source directory.
#======================================================================================================================

bcg-echo "Clearing ${SRC}..." "bcg-clear-src"
rm -rf ${SRC}/*
bcg-done "bcg-clear-src"
