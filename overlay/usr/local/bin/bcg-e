#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Check arguments.
#   1   Log namespace
#   2   ANSI colour code
#   3   Text to echo
#   4   Script / executable name (optional)
#======================================================================================================================

[[ -z "${1-}" ]] && bcg-error "You must provide the namespace of the output." "bcg-e" || NS=${1}
[[ -z "${2-}" ]] && bcg-error "You must provide a colour for the output." "bcg-e" || COLOUR=${2}
[[ -z "${3-}" ]] && bcg-error "You must provide the text to output." "bcg-e" || TEXT=${3}

if [ -n "${4-}" ] ; then
    PREFIX="${4}: "
    if [ -n "${BCG_E-}" ] ; then
        PREFIX="${BCG_E}/${PREFIX}"
    fi
elif [ -n "${BCG_E-}" ] ; then
    PREFIX="${BCG_E}: "
else
    PREFIX=""
fi


#======================================================================================================================
# Echo text in a specified ANSI colour.
#======================================================================================================================

DATE=$(date '+%Y-%m-%d %H:%M:%S')
NC="\e[0;39m"
echo -e "[${NS}] ${DATE} | ${COLOUR}${PREFIX}${TEXT}${NC}"
