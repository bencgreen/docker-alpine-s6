#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Check argument
#======================================================================================================================

[[ -z "${1-}" ]] && bcg-error "bcg-svc-restart: You must provide the name of a service."


#======================================================================================================================
# Stop a supervised service.
#
# Arguments:
#   1   Service name
#======================================================================================================================

SVC="/var/run/s6/services/${1}"
[[ ! -e ${SVC} ]] && bcg-error "bcg-svc-restart: Service ${1} does not exist."

bcg-echo "Restarting ${1} service..."
s6-svc -r "${SVC}"
bcg-done
