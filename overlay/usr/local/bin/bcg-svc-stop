#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Check argument
#======================================================================================================================

[[ -z "${1-}" ]] && bcg-error "bcg-stop: You must provide the name of a service."


#======================================================================================================================
# Stop a supervised service.
#
# Arguments:
#   1   Service name
#======================================================================================================================

SVC="/var/run/s6/services/${1}"
[[ ! -e ${SVC} ]] && bcg-error "bcg-stop: Service ${1} does not exist."

bcg-echo "Stopping ${1} service..."
s6-svc -t "${SVC}"
bcg-done
